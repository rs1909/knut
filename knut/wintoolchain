# the name of the target operating system
SET(CMAKE_SYSTEM_NAME Windows)

set(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} /usr/i686-w64-mingw32/sys-root/mingw/lib/cmake)
set(CMAKE_PREFIX_PATH /usr/i686-w64-mingw32/sys-root/mingw/)

# which compilers to use for C and C++
SET(CMAKE_C_COMPILER i686-w64-mingw32-gcc)
SET(CMAKE_CXX_COMPILER i686-w64-mingw32-g++)
SET(CMAKE_Fortran_COMPILER i686-w64-mingw32-gfortran)
SET(CMAKE_RC_COMPILER i686-w64-mingw32-windres)
SET(QT_QMAKE_EXECUTABLE /usr/i686-w64-mingw32/bin/qmake-qt5)
SET(QT_MOC_EXECUTABLE /usr/i686-w64-mingw32/bin/moc-qt5)
SET(QT_RCC_EXECUTABLE /usr/i686-w64-mingw32/bin/rcc-qt5)
SET(QT_UIC_EXECUTABLE /usr/i686-w64-mingw32/bin/uic-qt5)
# here is the target environment located
SET(CMAKE_FIND_ROOT_PATH /usr/i686-w64-mingw32/sys-root/mingw/ )

# the default behaviour of the FIND_XXX() commands:
# search headers and libraries in the target environment, search
# programs in the host environment
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)

set(QT_LIBRARY_DIR  /usr/i686-w64-mingw32/sys-root/mingw/bin)
set(QT_LIBRARIES /usr/i686-w64-mingw32/sys-root/mingw/bin)
#set(QT_QTCORE_INCLUDE_DIR /usr/i686-w64-mingw32/sys-root/mingw/include/QtCore)
#set(QT_QTGUI_INCLUDE_DIR /usr/i686-w64-mingw32/sys-root/mingw/include/QtGui)
#set(QT_QTSVG_INCLUDE_DIR /usr/i686-w64-mingw32/sys-root/mingw/include/QtSvg)
#set(QT_QTXML_INCLUDE_DIR /usr/i686-w64-mingw32/sys-root/mingw/include/QtXml)
